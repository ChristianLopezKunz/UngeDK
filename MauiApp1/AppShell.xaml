<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="{DynamicResource NavBarBackground}"
    Shell.TabBarForegroundColor="{DynamicResource NavBarForeground}">

    <!-- Bottom Tab Bar -->
    <TabBar>
        <!-- Main Page -->
        <ShellContent
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="home.png"
            Route="MainPage" />

        <!-- Favorites Page -->
        <ShellContent
            ContentTemplate="{DataTemplate local:FavoritesPage}"
            Icon="heart.png"
            Route="FavoritesPage" />

        <!-- Dark/Light Mode Toggle Page -->
        <ShellContent
            ContentTemplate="{DataTemplate local:ThemePage}"
            Icon="sun_moon.png"
            Route="ThemePage" />
    </TabBar>
</Shell>
