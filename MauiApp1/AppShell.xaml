<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp1"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="{DynamicResource NavBarBackground}"
    Shell.TabBarForegroundColor="{DynamicResource NavBarForeground}">

    <!-- Bottom Tab Bar -->
    <TabBar>
        <!-- Home Page -->
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Icon="home.png"
            Route="MainPage"
            Shell.NavBarIsVisible="False" />

        <!-- Favorites Page -->
        <ShellContent
            Title="Favorites"
            ContentTemplate="{DataTemplate local:FavoritesPage}"
            Icon="heart.png"
            Route="FavoritesPage"
            Shell.NavBarIsVisible="False" />

        <!-- More Page -->
        <ShellContent
            Title="Mere"
            ContentTemplate="{DataTemplate local:MorePage}"
            Icon="cog.png"
            Route="MorePage"
            Shell.NavBarIsVisible="False" />
    </TabBar>
</Shell>
